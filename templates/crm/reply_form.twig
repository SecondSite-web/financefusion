{% import 'form_macros.twig' as form %}
<div class="modal fade" id="replyModal{{ ticket.ticket_id }}" tabindex="-1" role="dialog" aria-labelledby="replyModal{{ ticket.ticket_id }}Label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary font-weight-bold" id="replyModal{{ ticket.ticket_id }}Label">Reply to Ticket #{{ ticket.ticket_id }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <form class="reply-submit" id="reply-ticket-form{{ ticket.ticket_id }}" method="post" action="{{ site.worker }}/reply-ticket.php" role="form">
                            <div class="messages"></div>
                            <div class="controls">
                                <div class="form-row">
                                    <div class="col-md-12">
                                        {{ form.textarea('message', 'Please reply in detail', '4') }}
                                        <input type="hidden" name="nonce" value="{{ call_nonce('reply-ticket-form') }}" />
                                        {{ form.inputHidden('user_id', user.id) }}
                                        {{ form.inputHidden('ticket_id', ticket.ticket_id) }}
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-success" type="submit" name="submit">Submit</button>
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

